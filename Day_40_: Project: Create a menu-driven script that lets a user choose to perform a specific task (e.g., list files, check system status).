# A menu-driven script lets the user choose what they want to do from a list of options.
It's interactive and responds based on the user's input.

#!/bin/bash
while true; do
    echo "====== System Menu ======"
    echo "1. List files in current directory"
    echo "2. Show current date and time"
    echo "3. Show system uptime"
    echo "4. Show disk usage"
    echo "5. Exit"
    echo "========================="
    read -p "Choose an option [1-5]: " choice
    case $choice in
        1)
            echo "Listing files..."
            ls -lah
            ;;
        2)
            echo "Current date and time:"
            date
            ;;
        3)
            echo "System uptime:"
            uptime
            ;;
        4)
            echo "Disk usage:"
            df -h
            ;;
        5)
            echo "Goodbye!"
            break
            ;;
        *)
            echo "Invalid option. Try again."
            ;;
    esac
    echo""
done
