read -p 'enter the user name to create: ' USER_NAME
reap -p 'enter the name of the person who this account is for: ' COMMENT
read -p 'enter the password to the user for the account: ' PASSWORD
  useradd -c "${COMMENT}" -m "${USER_NAME}"
  echo ${PASSWORD} | PASSWD --stdin ${USER_NAME}
  passwd -c ${USER_NAME}
